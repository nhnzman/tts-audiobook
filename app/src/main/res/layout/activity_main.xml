<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Subject selection row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtCurrentSubject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="기본"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChooseSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_subject" />
    </LinearLayout>

    <!-- EditText for user input or imported text -->
    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/enter_text"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:padding="8dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPaste"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/paste" />

        <Button
            android:id="@+id/btnImport"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/import" />

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/convert" />
    </LinearLayout>

    <!-- Mini player included at the bottom -->
    <include
        android:id="@+id/miniPlayer"
        layout="@layout/include_mini_player" />

</LinearLayout>